<div class="weather-block">
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    <div{{ content_attributes.addClass('content') }}>
      <div class="weather-image"><img src="http://openweathermap.org/img/w/{{ data.icon }}.png" alt=""></div>
      <div class="weather-info">
        <div class="weather-city">{{ data.city }}</div>
        <div class="weather-temperature">
          {{ data.tempMin }}° - {{ data.tempMax }}°
        </div>
      </div>
    </div>
  {% endblock %}
</div>
